#pragma hdrstop
#include "joueur.h"
#pragma package(smart_init)
//---------------------------------------------------------------------------
Joueur::Joueur()
{
        Trait = 0;
}
//---------------------------------------------------------------------------
inline void DonneTrait(){
        Trait = 1;}
inline void RetireTrait(){
        Trait = 0;}
inline bool LitTrait(){
        return Trait;}
